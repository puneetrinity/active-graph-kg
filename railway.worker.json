{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "/activekg/embedding/**",
      "/activekg/graph/repository.py",
      "/activekg/graph/models.py",
      "/activekg/common/**",
      "/activekg/engine/embedding_provider.py",
      "/requirements.txt",
      "/Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "python -m activekg.embedding.worker",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
